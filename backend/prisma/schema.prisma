generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// CORE MODELS (Currently Active)
// ============================================================================

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  googleId  String?  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  surveys   Survey[]
  personas  Persona[]
  // TODO: Phase 2 - Uncomment when Chat module is ready
  // chatSessions ChatSession[]

  @@map("users")
}

model Survey {
  id        String   @id @default(uuid())
  userId    String
  status    String   @default("COLLECTING") // COLLECTING, READY, COMPLETED, ARCHIVED
  title     String?
  shareableLink String? @unique
  minResponses Int     @default(3)
  createdAt DateTime @default(now())
  expiresAt DateTime @default(dbgenerated("NOW() + INTERVAL '30 days'"))

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  responses SurveyResponse[]

  @@index([userId])
  @@index([status])
  @@index([shareableLink])
  @@map("surveys")
}

model SurveyResponse {
  id              String   @id @default(uuid())
  surveyId        String
  answers         Json
  fingerprintHash String
  submittedAt     DateTime @default(now())

  survey          Survey   @relation(fields: [surveyId], references: [id], onDelete: Cascade)

  @@index([surveyId])
  @@map("survey_responses")
}

model Persona {
  id              String   @id @default(uuid())
  userId          String
  surveyId        String?
  name            String
  archetype       String
  statCharisma    Int      @default(50)
  statIntellect   Int      @default(50)
  statKindness    Int      @default(50)
  statEnergy      Int      @default(50)
  systemPrompt    String   @db.Text
  greetingMessage String?
  bondLevel       Int      @default(0)
  rarity          String   @default("COMMON") // COMMON, RARE, EPIC, LEGENDARY
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // TODO: Phase 2 - Uncomment when Chat module is ready
  // chatSessions   ChatSession[]
  // traits         PersonaTrait[]

  @@index([userId])
  @@map("personas")
}

