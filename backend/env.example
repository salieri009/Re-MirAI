# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/re_mirai_db

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# SQS Queue Names
PERSONA_GENERATION_QUEUE_NAME=persona-generation-queue
IMAGE_GENERATION_QUEUE_NAME=image-generation-queue

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_at_least_32_characters
JWT_ALGORITHM=HS256

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_oauth_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret

# LLM API Configuration (OpenAI)
LLM_API_KEY=your_openai_api_key
LLM_API_PROVIDER=openai

# Image Generation API Configuration (OpenAI DALL-E)
IMAGE_API_KEY=your_openai_api_key
IMAGE_API_PROVIDER=openai

# Environment Settings
ENVIRONMENT=development
DEBUG=false

# Application URLs (for generating invitation links)
FRONTEND_URL=https://remirai.app
API_BASE_URL=https://api.remirai.app
