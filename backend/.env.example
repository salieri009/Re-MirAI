# Database
DATABASE_URL=postgresql://user:password@localhost:5432/remirai_db

# AWS
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# SQS Queues
PERSONA_GENERATION_QUEUE_NAME=persona-generation-queue
IMAGE_GENERATION_QUEUE_NAME=image-generation-queue

# JWT
JWT_SECRET=your_jwt_secret_key_min_32_chars_long
JWT_ALGORITHM=HS256

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# LLM API (OpenAI or similar)
LLM_API_KEY=your_llm_api_key
LLM_API_PROVIDER=openai  # or 'anthropic'

# Image Generation API
IMAGE_API_KEY=your_image_api_key
IMAGE_API_PROVIDER=openai  # or 'stability_ai'

# Environment
ENVIRONMENT=development
DEBUG=True
