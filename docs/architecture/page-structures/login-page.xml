<?xml version="1.0" encoding="UTF-8"?>
<page-structure>
  <metadata>
    <name>Login Page</name>
    <route>/login</route>
    <component>LoginView.vue</component>
    <description>Authentication entry point with Google OAuth integration</description>
  </metadata>

  <design-principles>
    <principle source="kickofflabs.com">
      <name>Color Palette Limitation</name>
      <compliance>Yes</compliance>
      <details>Uses 1 primary color (indigo/purple gradient) for CTA button, minimal color usage</details>
    </principle>
    <principle source="kickofflabs.com">
      <name>Single Font Family</name>
      <compliance>Yes</compliance>
      <details>Uses Inter font family throughout</details>
    </principle>
    <principle source="kickofflabs.com">
      <name>4px Grid System</name>
      <compliance>Yes</compliance>
      <details>Card padding, spacing between elements all use 4px increments</details>
    </principle>
    <principle source="kickofflabs.com">
      <name>Single Primary Action</name>
      <compliance>Yes</compliance>
      <details>One primary CTA button (Google Login) with clear focus</details>
    </principle>
  </design-principles>

  <color-palette>
    <primary-cta>
      <color>indigo-500 to purple-600 gradient</color>
      <usage>Primary login button</usage>
      <hex-start>#6366f1</hex-start>
      <hex-end>#9333ea</hex-end>
    </primary-cta>
    <background>
      <color>akashic gradient</color>
      <usage>Page background</usage>
      <hex-values>#0a0e27, #1a1f3a, #2d1b4e</hex-values>
    </background>
    <card>
      <color>rgba(26, 31, 58, 0.5) with backdrop blur</color>
      <usage>Login card container</usage>
    </card>
    <text>
      <primary>#ffffff</primary>
      <secondary>#a0aec0</secondary>
      <muted>rgba(160, 174, 192, 0.8)</muted>
    </text>
    <error>
      <color>red-400 (#ef4444)</color>
      <usage>Error messages</usage>
    </error>
  </color-palette>

  <typography>
    <font-family>Inter, system-ui, sans-serif</font-family>
    <variations>
      <variation>
        <name>Title</name>
        <weight>bold (700)</weight>
        <size>text-3xl (30px)</size>
        <effect>text-gradient</effect>
      </variation>
      <variation>
        <name>Body</name>
        <weight>regular (400)</weight>
        <size>text-base (16px)</size>
      </variation>
      <variation>
        <name>Small Text</name>
        <weight>regular (400)</weight>
        <size>text-xs (12px)</size>
      </variation>
    </variations>
  </typography>

  <spacing-system>
    <base-unit>4px</base-unit>
    <tokens>
      <token name="--card-padding" value="24px" multiplier="6" />
      <token name="--element-spacing" value="16px" multiplier="4" />
      <token name="--text-spacing" value="8px" multiplier="2" />
    </tokens>
    <usage>
      <spacing>space-y-6 (24px) between major sections</spacing>
      <spacing>space-y-4 (16px) between form elements</spacing>
      <spacing>mt-8 (32px) top margin for form section</spacing>
    </usage>
  </spacing-system>

  <layout-structure>
    <container type="centered">
      <layout>min-h-screen flex items-center justify-center</layout>
      <padding>mx-4 (16px horizontal margin)</padding>
      
      <card>
        <max-width>max-w-md</max-width>
        <width>w-full</width>
        <padding>var(--card-padding)</padding>
        <animation>animate-slide-up</animation>
        
        <content>
          <alignment>text-center</alignment>
          <spacing>space-y-6</spacing>
          
          <elements>
            <element type="title">
              <text>Welcome to Re:MirAI</text>
              <size>text-3xl</size>
              <weight>bold</weight>
              <effect>text-gradient</effect>
            </element>
            
            <element type="description">
              <text>Sign in to begin your summoning ritual</text>
              <color>text-secondary</color>
            </element>
            
            <element type="form-section">
              <spacing-top>mt-8 (32px)</spacing-top>
              <spacing>space-y-4</spacing>
              
              <button type="primary" size="lg" width="w-full">
                <icon>Google logo SVG</icon>
                <text>Continue with Google</text>
                <loading-state>Yes</loading-state>
              </button>
              
              <element type="legal-text">
                <text>By continuing, you agree to our Terms of Service and Privacy Policy</text>
                <size>text-xs</size>
                <color>text-muted</color>
                <alignment>text-center</alignment>
              </element>
            </element>
            
            <element type="error-message" conditional="true">
              <container>mt-4 p-4 bg-red-900 bg-opacity-20 border border-red-500 rounded-lg</container>
              <text-color>text-red-400</text-color>
              <size>text-sm</size>
            </element>
          </elements>
        </content>
      </card>
    </container>
  </layout-structure>

  <components>
    <component name="Button" usage="Primary login action">
      <variant>primary</variant>
      <size>lg</size>
      <width>w-full</width>
      <loading>Yes (isLoading state)</loading>
    </component>
  </components>

  <accessibility>
    <aria-labels>Button has proper aria-label</aria-labels>
    <loading-state>aria-busy attribute on button when loading</loading-state>
    <error-state>Error message uses role="alert" for screen readers</error-state>
  </accessibility>

  <responsive-design>
    <breakpoints>
      <mobile>Default (mobile-first)</mobile>
      <tablet>md: (768px+)</tablet>
    </breakpoints>
    <adaptations>
      <adaptation>Card max-width: responsive with mx-4 padding on mobile</adaptation>
      <adaptation>Button: full width on all screen sizes</adaptation>
    </adaptations>
  </responsive-design>
</page-structure>

