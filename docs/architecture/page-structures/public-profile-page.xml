<?xml version="1.0" encoding="UTF-8"?>
<page-structure>
  <metadata>
    <name>Public Profile Page</name>
    <route>/profile/:userId</route>
    <component>PublicProfileView.vue</component>
    <description>Shareable public profile page displaying a user's persona</description>
  </metadata>

  <design-principles>
    <principle source="kickofflabs.com">
      <name>Color Palette Limitation</name>
      <compliance>Yes</compliance>
      <details>Uses 1-2 colors: minimal color usage, persona rarity colors</details>
    </principle>
    <principle source="kickofflabs.com">
      <name>Single Font Family</name>
      <compliance>Yes</compliance>
      <details>Uses Inter font family throughout</details>
    </principle>
    <principle source="kickofflabs.com">
      <name>4px Grid System</name>
      <compliance>Yes</compliance>
      <details>All spacing uses 4px increments</details>
    </principle>
  </design-principles>

  <color-palette>
    <primary-cta>
      <color>indigo-500 to purple-600 gradient</color>
      <usage>Primary action buttons (if any)</usage>
    </primary-cta>
    <persona-rarity>
      <colors>N, R, SR, SSR, UR rarity colors</colors>
      <usage>Persona card rarity indicators</usage>
    </persona-rarity>
    <background>
      <color>akashic gradient</color>
      <usage>Page background</usage>
    </background>
  </color-palette>

  <typography>
    <font-family>Inter, system-ui, sans-serif</font-family>
    <variations>
      <variation>
        <name>Page Title</name>
        <weight>bold (700)</weight>
        <size>text-3xl (30px)</size>
        <effect>text-gradient</effect>
      </variation>
    </variations>
  </typography>

  <spacing-system>
    <base-unit>4px</base-unit>
    <usage>
      <spacing>space-y-8 (32px) between major sections</spacing>
      <spacing>Standard card padding (24px)</spacing>
    </usage>
  </spacing-system>

  <layout-structure>
    <container type="page">
      <max-width>max-w-4xl</max-width>
      <spacing>space-y-8</spacing>
      
      <header>
        <title>{persona.name}'s Profile</title>
        <size>text-3xl</size>
        <effect>text-gradient</effect>
        <description>Public persona profile</description>
      </header>
      
      <persona-display>
        <type>card</type>
        <component>PersonaCard (full size)</component>
        <alignment>centered</alignment>
      </persona-display>
      
      <cta-section conditional="not owner">
        <type>card</type>
        <alignment>text-center</alignment>
        <message>Create your own persona!</message>
        <button type="primary" size="lg" text="Begin Your Ritual" />
      </cta-section>
    </container>
  </layout-structure>

  <components>
    <component name="PersonaCard" usage="Display persona profile">
      <size>full</size>
    </component>
    <component name="Button" usage="CTA to create own persona">
      <variant>primary</variant>
      <size>lg</size>
    </component>
  </components>

  <states>
    <state type="loading">
      <display>Loading persona data</display>
    </state>
    <state type="ready">
      <display>Persona profile with optional CTA</display>
    </state>
    <state type="error">
      <display>Error message if persona not found</display>
    </state>
  </states>

  <accessibility>
    <aria-labels>All interactive elements have descriptive labels</aria-labels>
    <semantic-html>Uses proper heading hierarchy</semantic-html>
  </accessibility>

  <responsive-design>
    <breakpoints>
      <mobile>Default</mobile>
      <tablet>md: (768px+)</tablet>
    </breakpoints>
    <adaptations>
      <adaptation>Content: centered with max-width constraint</adaptation>
    </adaptations>
  </responsive-design>
</page-structure>

