<?xml version="1.0" encoding="UTF-8"?>
<page-structure>
  <metadata>
    <name>Dashboard Page</name>
    <route>/dashboard</route>
    <component>DashboardView.vue</component>
    <description>Main user hub showing persona status, ritual progress, and quick actions</description>
  </metadata>

  <design-principles>
    <principle source="kickofflabs.com">
      <name>Color Palette Limitation</name>
      <compliance>Yes</compliance>
      <details>Uses 1-2 colors: indigo/purple gradient for CTAs, green for success states, red for errors</details>
    </principle>
    <principle source="kickofflabs.com">
      <name>Single Font Family</name>
      <compliance>Yes</compliance>
      <details>Uses Inter font family throughout with weight variations</details>
    </principle>
    <principle source="kickofflabs.com">
      <name>4px Grid System</name>
      <compliance>Yes</compliance>
      <details>All spacing uses CSS variables based on 4px increments</details>
    </principle>
    <principle source="kickofflabs.com">
      <name>Consistent Padding</name>
      <compliance>Yes</compliance>
      <details>All cards use var(--card-padding) (24px), sections use var(--section-spacing) (48px)</details>
    </principle>
  </design-principles>

  <color-palette>
    <primary-cta>
      <color>indigo-500 to purple-600 gradient</color>
      <usage>Primary action buttons (Begin Ritual, Enter Persona Room)</usage>
      <hex-start>#6366f1</hex-start>
      <hex-end>#9333ea</hex-end>
    </primary-cta>
    <success>
      <color>green-500 to emerald-600 gradient</color>
      <usage>Ready for summoning button, success states</usage>
    </success>
    <error>
      <color>red-500/50 border, red-500/10 background</color>
      <usage>Error messages</usage>
    </error>
    <background>
      <color>akashic gradient</color>
      <usage>Page background</usage>
    </background>
    <card>
      <color>rgba(26, 31, 58, 0.5) with backdrop blur</color>
      <usage>Card containers</usage>
    </card>
  </color-palette>

  <typography>
    <font-family>Inter, system-ui, sans-serif</font-family>
    <variations>
      <variation>
        <name>Page Title</name>
        <weight>semibold (600)</weight>
        <size>text-xl (20px)</size>
      </variation>
      <variation>
        <name>Section Headings</name>
        <weight>semibold (600)</weight>
        <size>text-xl (20px)</size>
      </variation>
      <variation>
        <name>Body</name>
        <weight>regular (400)</weight>
        <size>text-base (16px), text-sm (14px)</size>
      </variation>
    </variations>
  </typography>

  <spacing-system>
    <base-unit>4px</base-unit>
    <tokens>
      <token name="--container-padding" value="24px" multiplier="6" />
      <token name="--section-spacing" value="48px" multiplier="12" />
      <token name="--card-padding" value="24px" multiplier="6" />
      <token name="--card-spacing" value="16px" multiplier="4" />
      <token name="--element-spacing" value="16px" multiplier="4" />
      <token name="--text-spacing" value="8px" multiplier="2" />
      <token name="--micro-spacing" value="4px" multiplier="1" />
    </tokens>
  </spacing-system>

  <layout-structure>
    <container>
      <padding>var(--container-padding)</padding>
      <spacing>var(--section-spacing)</spacing>
      
      <header-section>
        <type>card</type>
        <background>gradient from-indigo-500/10 to-purple-500/10</background>
        <border>border-indigo-500/20</border>
        <padding>var(--card-padding)</padding>
        
        <layout>flex items-center justify-between</layout>
        
        <user-info>
          <avatar>
            <size>w-12 h-12 (48px)</size>
            <background>gradient from-indigo-500 to-purple-600</background>
            <spacing-right>var(--element-spacing)</spacing-right>
          </avatar>
          <text>
            <greeting>Welcome back, {name}</greeting>
            <size>text-xl</size>
            <spacing-bottom>var(--micro-spacing)</spacing-bottom>
          </text>
          <energy-display>
            <icon>âš¡</icon>
            <value>{memoryCrystals}</value>
            <color>text-yellow-400</color>
          </energy-display>
        </user-info>
        
        <action>
          <button type="ghost" size="sm" text="Logout" />
        </action>
      </header-section>
      
      <main-section>
        <layout>grid lg:grid-cols-2</layout>
        <gap>var(--card-spacing)</gap>
        
        <card id="persona-status">
          <padding>var(--card-padding)</padding>
          <states>
            <state type="summoning">
              <icon>Animated pulse circle with lightning</icon>
              <title>Persona Summoning</title>
              <description>Your AI companion is being forged...</description>
            </state>
            <state type="ready">
              <title>Your AI Persona</title>
              <status-indicator>Green dot + "Ready"</status-indicator>
              <component>PersonaCard (compact size)</component>
              <button type="primary" text="Enter Persona Room" />
            </state>
            <state type="empty">
              <icon>Large plus icon in gradient box</icon>
              <title>Create Your First Persona</title>
              <description>Start a ritual to discover how your friends see you</description>
              <button type="primary" text="Begin Ritual" />
            </state>
          </states>
        </card>
        
        <card id="ritual-progress">
          <padding>var(--card-padding)</padding>
          <states>
            <state type="active">
              <header>
                <title>Ritual Progress</title>
                <count>{responsesCount}/3</count>
              </header>
              <progress-bar>
                <background>slate-700</background>
                <fill>gradient from-indigo-500 via-purple-500 to-pink-500</fill>
                <width>Dynamic based on progress percentage</width>
                <height>h-3 (12px)</height>
                <milestones>1st, 2nd, Ready! (with status indicators)</milestones>
              </progress-bar>
              <actions>
                <action type="ready">
                  <container>bg-gradient-to-r from-green-500/20 to-emerald-500/20</container>
                  <button type="primary" color="green" text="Begin Summoning Ritual" />
                </action>
                <action type="waiting">
                  <label>Invitation Link</label>
                  <input type="readonly" value="{invitationUrl}" />
                  <button type="ghost" icon="copy" />
                </action>
              </actions>
            </state>
            <state type="empty">
              <icon>Settings icon in gradient circle</icon>
              <title>Start Your Ritual</title>
              <description>Create a survey link and share it with friends</description>
              <button type="primary" text="Create Survey Link" loading="isCreatingRitual" />
            </state>
          </states>
        </card>
      </main-section>
    </container>
  </layout-structure>

  <components>
    <component name="Button" usage="Various actions">
      <variants>primary, ghost</variants>
      <sizes>sm, md, lg</sizes>
      <gradient-options>indigo-purple, green-emerald</gradient-options>
    </component>
    <component name="PersonaCard" usage="Display persona when ready">
      <size>compact</size>
    </component>
    <component name="LoadingSkeleton" usage="Loading states">
      <types>header, persona, progress</types>
    </component>
  </components>

  <states>
    <state type="loading">
      <display>LoadingSkeleton components</display>
      <aria>role="status" aria-live="polite"</aria>
    </state>
    <state type="error">
      <display>Error card with retry button</display>
      <aria>role="alert" aria-live="assertive"</aria>
    </state>
    <state type="ready">
      <display>Full dashboard content</display>
    </state>
  </states>

  <accessibility>
    <aria-labels>All interactive elements have descriptive labels</aria-labels>
    <loading-states>aria-live="polite" for loading, aria-live="assertive" for errors</loading-states>
    <semantic-html>Uses header, main, section elements</semantic-html>
  </accessibility>

  <responsive-design>
    <breakpoints>
      <mobile>Default (mobile-first)</mobile>
      <desktop>lg: (1024px+)</desktop>
    </breakpoints>
    <adaptations>
      <adaptation>Main section: single column on mobile, two columns on desktop</adaptation>
      <adaptation>Header: stacks vertically on mobile, horizontal on desktop</adaptation>
    </adaptations>
  </responsive-design>
</page-structure>

