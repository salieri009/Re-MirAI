<?xml version="1.0" encoding="UTF-8"?>
<page-structure>
  <metadata>
    <name>Summoning Page</name>
    <route>/summon</route>
    <component>SummoningView.vue</component>
    <description>Persona summoning interface with Fated and Alchemic modes</description>
  </metadata>

  <design-principles>
    <principle source="kickofflabs.com">
      <name>Color Palette Limitation</name>
      <compliance>Yes</compliance>
      <details>Uses 1-2 colors: indigo/purple gradient for primary actions</details>
    </principle>
    <principle source="kickofflabs.com">
      <name>Single Font Family</name>
      <compliance>Yes</compliance>
      <details>Uses Inter font family throughout</details>
    </principle>
    <principle source="kickofflabs.com">
      <name>4px Grid System</name>
      <compliance>Yes</compliance>
      <details>All spacing uses 4px increments</details>
    </principle>
  </design-principles>

  <color-palette>
    <primary-cta>
      <color>indigo-500 to purple-600 gradient</color>
      <usage>Primary summoning button</usage>
    </primary-cta>
    <background>
      <color>akashic gradient</color>
      <usage>Page background</usage>
    </background>
  </color-palette>

  <typography>
    <font-family>Inter, system-ui, sans-serif</font-family>
    <variations>
      <variation>
        <name>Title</name>
        <weight>bold (700)</weight>
        <size>text-4xl (36px)</size>
        <effect>text-gradient</effect>
      </variation>
      <variation>
        <name>Section Headings</name>
        <weight>bold (700)</weight>
        <size>text-xl (20px), text-2xl (24px)</size>
      </variation>
    </variations>
  </typography>

  <spacing-system>
    <base-unit>4px</base-unit>
    <usage>
      <spacing>space-y-8 (32px) between major sections</spacing>
      <spacing>gap-6 (24px) between mode cards</spacing>
      <spacing>gap-4 (16px) between action buttons</spacing>
    </usage>
  </spacing-system>

  <layout-structure>
    <container type="centered">
      <layout>min-h-screen flex items-center justify-center</layout>
      <spacing>space-y-8</spacing>
      
      <state type="summoning">
        <icon>âœ¨ (text-6xl, animate-bounce)</icon>
        <title>The Summoning Has Begun</title>
        <size>text-4xl</size>
        <component>LoadingSpinner</component>
        <text>Weaving the Relational Crystals...</text>
        <description>Your Persona is being summoned from the Akashic Stream</description>
      </state>
      
      <state type="complete">
        <title>Summoning Complete!</title>
        <size>text-4xl</size>
        <effect>text-gradient</effect>
        <component>PersonaCard</component>
        <actions>
          <layout>flex gap-4 justify-center</layout>
          <button type="primary" size="lg" text="Go to Her Room" />
          <button type="secondary" size="lg" text="Start Chatting" />
        </actions>
      </state>
      
      <state type="selection">
        <card>
          <max-width>max-w-2xl</max-width>
          <title>Choose Your Summoning Mode</title>
          <size>text-2xl</size>
          <spacing-bottom>mb-4</spacing-bottom>
          
          <mode-selection>
            <layout>grid md:grid-cols-2</layout>
            <gap>gap-6</gap>
            <spacing-bottom>mb-6</spacing-bottom>
            
            <mode-card type="Fated">
              <interaction>cursor-pointer hover:scale-105</interaction>
              <title>Fated Summon</title>
              <description>Discover the true Persona hidden in your data</description>
            </mode-card>
            
            <mode-card type="Alchemic">
              <interaction>cursor-pointer hover:scale-105</interaction>
              <title>Alchemic Summon</title>
              <description>Experiment with different archetypes</description>
            </mode-card>
          </mode-selection>
          
          <archetype-selector conditional="Alchemic mode">
            <spacing-bottom>mb-6</spacing-bottom>
            <label>Select Archetype Filter</label>
            <component>select dropdown</component>
            <options>Tsundere, Yandere, Kuudere, Genki</options>
          </archetype-selector>
          
          <action>
            <button type="primary" size="lg" text="Begin Summoning" />
            <states>disabled (if Alchemic without archetype), loading</states>
          </action>
        </card>
      </state>
    </container>
  </layout-structure>

  <components>
    <component name="Button" usage="Navigation and actions">
      <variants>primary, secondary</variants>
      <sizes>lg</sizes>
      <states>disabled, loading</states>
    </component>
    <component name="PersonaCard" usage="Display summoned persona">
      <size>default</size>
    </component>
    <component name="LoadingSpinner" usage="Summoning progress">
      <size>lg</size>
      <text>Weaving the Relational Crystals...</text>
    </component>
  </components>

  <states>
    <state type="summoning">
      <display>Loading animation with progress text</display>
    </state>
    <state type="complete">
      <display>Persona card with navigation options</display>
    </state>
    <state type="selection">
      <display>Mode selection interface</display>
    </state>
  </states>

  <accessibility>
    <aria-labels>Buttons have descriptive labels</aria-labels>
    <loading-states>Loading spinner with descriptive text</loading-states>
  </accessibility>

  <responsive-design>
    <breakpoints>
      <mobile>Default</mobile>
      <tablet>md: (768px+)</tablet>
    </breakpoints>
    <adaptations>
      <adaptation>Mode cards: single column on mobile, two columns on desktop</adaptation>
    </adaptations>
  </responsive-design>
</page-structure>

